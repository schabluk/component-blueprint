{
  "compilerOptions": {
    "declaration": false,
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "@types/react",
      "@types/react-dom"
    ]
  },
  "compileOnSave": false,
  "files": [
    "./src/main.ts"
  ],
  "exclude": [
    "node_modules", "dist"
  ]
}
